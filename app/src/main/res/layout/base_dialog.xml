<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/card_background_fgc"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/dialog_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_dark_fgc"
        android:textColor="#FFFFFF"
        style="@style/Base.DialogWindowTitle.AppCompat"
        tools:text="BLAHBLAHBLAH HEADER"
              android:gravity="center_horizontal"
              android:padding="5dp"/>

    <TextView android:id="@+id/dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_background_fgc"
        android:layout_below="@id/dialog_header"
        style="@style/Base.AlertDialog.AppCompat.Light"
        tools:text="BLAHBLAHBLAH TEST TEXT"
        android:textColor="#000000"
              android:gravity="center_horizontal"
              android:padding="5dp"
              android:layout_marginTop="8dp"/>

    <Button android:id="@+id/dialog_ok"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/action_button_fgc"
            android:text="@string/base_dialog_ok"
            android:layout_below="@id/dialog_content"
            android:layout_alignParentRight="true">
    </Button>

    <Button android:id="@+id/dialog_cancel"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/action_button_fgc"
            android:text="@string/base_dialog_cancel"
            android:layout_toLeftOf="@id/dialog_ok"
            android:layout_below="@id/dialog_content">
    </Button>



</RelativeLayout>