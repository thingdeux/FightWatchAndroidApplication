<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <TextView android:id="@+id/loading_title"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAppearance="@android:style/TextAppearance.Large"
              android:text="@string/twitch_loading_message_title"
              android:gravity="center"/>

    <ProgressBar android:id="@+id/loading_spinner"
                 style="?android:attr/progressBarStyle"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal"
                 android:layout_marginTop="15dp"
                 android:layout_below="@id/loading_title"
                 android:layout_alignParentTop="false"
                 android:layout_alignParentBottom="false"
                 android:layout_centerHorizontal="true"/>

    <TextView android:id="@+id/loading_subtitle"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAppearance="@android:style/TextAppearance.Large"
              android:layout_below="@id/loading_spinner"
              android:layout_marginTop="15dp"
              android:text="@string/loading_message_subtitle"
              android:gravity="center"/>
</RelativeLayout>

