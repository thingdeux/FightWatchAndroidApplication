<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/toolbar_dark_fgc</item>
        <item name="colorPrimary">@color/primary_dark_fgc</item>
    </style>

    <style name="Widget.CustomTitlepageIndicator">
        <item name="footerColor">@color/viewpager_underline_fgc</item>
        <item name="android:background">@color/primary_dark_fgc</item>
        <item name="android:textAppearance">@style/TextAppearance.TabPageIndicator</item>
        <item name="footerIndicatorHeight">2.5dp</item>
        <item name="footerLineHeight">3.0dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="footerPadding">6dp</item>
        <item name="selectedColor">#ffffffff</item>
    </style>
</resources>
